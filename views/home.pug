doctype html
html 
    head
        title= title
        link(rel="stylesheet" href="/stylesheets/style.css")
        script(
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"
        )

        style(type="text/css").
            .inputContainer { 
                flex-direction: column; 
                width: 200px;
                margin: 10px;
            }
            .inputContainer p {
                margin: 5px 0;
            }
            .buttonStyles {
                margin: 10px 0;
            }
    body
        div(class="inputContainer")
            form(id="auth-form" method="POST" action="/admin/auth")
                p(class="textStyle")="Username:"
                input(
                    name="username"
                    type="text"
                    id="username_Id"
                )
                p="Password:"
                input(
                    name="password"
                    type="password"
                    id="password_Id"
                )
                button(type="submit" class="buttonStyles") login