doctype html
html
    header
        title="User information"
        link(rel="stylesheet" href="/stylesheets/style.css")
    body
        div(class="contentWrapper")
            h2="Menu"
            p.
                Logged in as #[strong #{admin.username}]
        div(class="contentWrapper menuStyles")
            p
                a(href="/admin/dashboard")="Home"
            p
                a(href="/admin/userList")="List of Users"
            p
                a(href="/admin/logout")="Logout"
        div(class="contentWrapper")
            h2=user.email
            div
                p="Joined at: " + moment(user.createdAt).format("MMMM Do YYYY")
                -
                    const lastLogIn = !user.loggedAt[4] ? "Never Logged In" : moment(user.loggedAt[4]).format("dddd, MMMM Do YYYY, h:mm:ss a")
                p= "Last logged in: " + lastLogIn
            div
                -
                    const loggedToday = user.loggedAt.filter((date) => {
                        if (moment(date).format("ddd") === moment().format("dddd")) {
                            return true;
                        } else {
                            return false;
                        }
                    })
                p=`Logged in at least ${loggedToday.length} times today.`
                -
                    const loggedYesterday = user.loggedAt.filter((date) => {
                        if (moment(date).format("ddd") === moment().subtract(1, "d").format("dddd")) {
                            return true;
                        } else {
                            return false;
                        }
                    })
                p=`Logged in at least ${loggedYesterday.length} times yesterday.`   
                -
                    const logged3DaysAgo = user.loggedAt.filter((date) => {
                        if (moment(date).format("ddd") === moment().subtract(3, "d").format("dddd")) {
                            return true;
                        } else {
                            return false;
                        }
                    })
                p=`Logged in at least ${logged3DaysAgo.length} times on ${moment().subtract(3, "d").format("dddd")}.` 
                
            
        